                            <TextBlock Width="50px" TextAlignment="Right" Margin="5">Składnik:</TextBlock>
                            <TextBox Name="Ingredient11" Width="150px" Margin="5"></TextBox>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel  Width="200" Margin="10px">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Width="50px" TextAlignment="Right" Margin="5">Składnik:</TextBlock>
                            <TextBox Name="Ingredient12" Width="150px" Margin="5"></TextBox>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Width="50px" TextAlignment="Right" Margin="5">Składnik:</TextBlock>
                            <TextBox Name="Ingredient13" Width="150px" Margin="5"></TextBox>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Width="50px" TextAlignment="Right" Margin="5">Składnik:</TextBlock>
                            <TextBox Name="Ingredient14" Width="150px" Margin="5"></TextBox>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Width="50px" TextAlignment="Right" Margin="5">Składnik:</TextBlock>
                            <TextBox Name="Ingredient15" Width="150px" Margin="5"></TextBox>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Width="50px" TextAlignment="Right" Margin="5">Składnik:</TextBlock>
                            <TextBox Name="Ingredient16" Width="150px" Margin="5"></TextBox>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Width="50px" TextAlignment="Right" Margin="5">Składnik:</TextBlock>
                            <TextBox Name="Ingredient17" Width="150px" Margin="5"></TextBox>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Width="50px" TextAlignment="Right" Margin="5">Składnik:</TextBlock>
                            <TextBox Name="Ingredient18" Width="150px" Margin="5"></TextBox>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Width="50px" TextAlignment="Right" Margin="5">Składnik:</TextBlock>
                            <TextBox Name="Ingredient19" Width="150px" Margin="5"></TextBox>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Width="50px" TextAlignment="Right" Margin="5">Składnik:</TextBlock>
                            <TextBox Name="Ingredient20" Width="150px" Margin="5"></TextBox>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Width="50px" TextAlignment="Right" Margin="5">Składnik:</TextBlock>
                            <TextBox Name="Ingredient21" Width="150px" Margin="5"></TextBox>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Width="50px" TextAlignment="Right" Margin="5">Składnik:</TextBlock>
                            <TextBox Name="Ingredient22" Width="150px" Margin="5"></TextBox>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

            </StackPanel>
            <StackPanel>
                <Button Name="executeButton" Click="executeButton_Click" Margin="10px" Width="120px" Height="20px">Wykonaj</Button>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
